{
  "name": "lightedge-polymarket-bot",
  "version": "1.0.0",
  "description": "Polymarket trading bot with paper trading mode and customizable strategies",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "paper": "PAPER_MODE=true ts-node src/index.ts",
    "watcher": "WATCHER_MODE=true PAPER_MODE=true ts-node src/index.ts",
    "dashboard": "WATCHER_MODE=true PAPER_MODE=true ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "polymarket",
    "trading",
    "bot",
    "paper-trading"
  ],
  "license": "ISC",
  "dependencies": {
    "@polymarket/clob-client": "^4.4.3",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.5.13",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "js-yaml": "^4.1.1",
    "moment": "^2.30.1",
    "mongoose": "^8.8.0",
    "ora": "^5.4.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
